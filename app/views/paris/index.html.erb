
<br/>
<h1 class="fa-solid fa-money-bill-1-wave fa-2xl fw-bold fs-1"> - Paris </h1>   
<br/> <hr/> 
 
<%= render "shared/choixevent" %>

<% if (@eventId).present? %>
  <%= render "shared/eventactif" %>


   <% if current_user.admin? %>
     <%= link_to "calcul résultats", toggle_calculresultats_pari_path(@eventId), class:"btn btn-warning btn-sm", style:"margin: 2px" %>
     <%= link_to "Nouveu pari", new_pari_path(saisonId: @saisonId, divisionId: @divisionId, eventId: @eventId, numGp: @numGp), class:"btn btn-sm btn-primary" %>
     <br/> <br>
   <% end %>
      
<%# tab datas %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>  
        <th>#</th>
        <th>parieur</th>
        <th>montant</th>
        <th>type</th>
        <th>coureur</th>
        <th>cote</th>
        <th>=</th>
        <th>solde</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
      <tbody>
          <% @paris.each do | pari| %> 
           <tr>
            <td> <%= pari.id  %> </td>
            <td> <%= pari.parieur.nom %> </td>
            <td> <%= pari.montant %> </td>
            <td> <%= pari.paritype %> </td>
            <td> <%= pari.coureur.nom %> </td>
            <td> <%= pari.cote %> </td>
            <td> 
              <% if pari.resultat == true %>
                <i class="fa-solid fa-circle-check fa-xl" style="color:green"></i>
              <% else %>
                <i class="fa-solid fa-circle-xmark fa-xl" style="color:red"></i>
              <% end %>
            </td>
            <td> <%= pari.solde %> </td>
            <td> <%= link_to '', pari, class:"fa-solid fa-eye btn btn-primary btn-sm" %>  </td>
            <td> <%= button_to '', pari, class:"fa-solid fa-trash-can btn btn-danger btn-sm", method: :delete, :onclick => "return confirm('Sûr ?')" %>  </td> 
            <td> <%= link_to "", edit_pari_path(pari), class:"fa-regular fa-pen-to-square btn btn-secondary btn-sm" %> </td> 
          </tr>
         <% end %>
    </tbody>
  </table>
</div>

<br>

<% end %>

