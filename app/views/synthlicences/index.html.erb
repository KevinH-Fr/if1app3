
  <br/>
  <h1 class="fa-solid fa-person-military-pointing fa-2xl fw-bold fs-1"> - Synthese Licences </h1>   
  <br/> <hr/> 

<%= render "shared/choixevent" %>

  <% if (@eventId).present? %>

    <%= render "shared/eventactif" %>

    <%# document %>
    <% numGp = Event.find(@eventId).numero %>
    <%= link_to "Générer image",   documentedition_synthlicences_path(saisonId: @saisonId, divisionId: @divisionId, eventId: @eventId, numGp: numGp, format: :png), class:"btn btn-sm btn-success" %>
  
    <br/><br/>

    <%# table des situation licences pilotes titulaires %>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Titulaires</th>
            <th>Ecuries</th>
            <th>Val départ</th>
            <th>perdus</th>
            <th>recupérés</th>
            <th>Solde</th>
          </tr>
        </thead>

            <tbody>
            <tr>
            <% @licencesFiltres.each_with_index do | licence, i| %>
            
                <td>
                <% if licence.pilote_id.present? %>
                    <%= Pilote.find(licence.pilote_id).nom  %>
                <% end %>  
                </td>
                <td>
                  <% idEcurie = Pilote.find(licence.pilote_id).ecurie %> 
                  <% if Equipe.find(idEcurie).logo.present? %>
                    <%= image_tag Equipe.find(idEcurie).logo, style: "width: 300px; display: block", class: "img-fluid rounded" %>
                  <% end %>
                </td>
                
                <td style="text-align: center;">
                <%= @licencesValDepart %>
                </td>
                <td style="text-align: center;">
                    <%= licence.total_penalite %>
                </td>
                <td style="text-align: center;">
                    <%= licence.total_recupere %>
                </td>
                <td style="text-align: center;">
                <strong>
                    <%= @licencesValDepart.to_i - licence.total_penalite.to_i + licence.total_recupere.to_i %>
                </strong>
                </td>
                
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>
  <% end %>