<% if user_signed_in? %>

<div> 
  <table class="table_icon_titre">
    <tr>
     <br>
      <th class="fa-solid fa-arrows-spin fa-xl fs-1 table_icon_titre"> </th>
      <th class="table_icon_titre"> &nbsp;|&nbsp;Saisons </th>
    </tr>
  </table>
</div>

 <hr/> 

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Nom</th>
          <th>Numero</th>
          <th>Periode</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @saisons.each do |saison| %>
              <tr>
                <td> <%= link_to saison.nom, saison %> </td>
                <td>  <%= saison.numeroSaison %> </td>
                <td>  <%= saison.periode %> </td>    
            
                  <td width="5%">
                      <%= link_to '', saison, class:"fa-solid fa-eye btn btn-sm btn-primary" %> 
                  </td>
                  <% if current_user.admin? %>
                    <td width="5%">
                      <%= button_to '', saison, class:"fa-solid fa-trash-can btn btn-sm btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
                    </td> 
                    <td width="5%">
                        <%= link_to "", edit_saison_path(saison), class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary" %> 
                    </td> 
                  <% end %>
              </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if current_user.admin? %>
    <%= link_to "Nouvelle saison", new_saison_path, class:"btn btn-primary" %>
  <% end %>

<% else %>
  <br/>   <strong>Vous n'avez pas les droits...</strong>
<% end %>

