
<div>
  <canvas id="myChart" width="200px" height="100px" data-labels="<%= @data_keys %>" data-data="<%= @data_values %>" ></canvas> 
</div>

<% @piloteId = params[:id] %>

<%= @nbVictoire = Resultat.pilote_courant(@piloteId).compte_p1 %>
<%= @nbPodium = Resultat.pilote_courant(@piloteId).compte_podium %>
<%= @nbTop10 = Resultat.pilote_courant(@piloteId).compte_top10 %>

<script>

  var listePilotes = <%= raw(@pilotes.map(&:nom)) %>;
  var nbVictoire = <%= raw(@pilotes.map(&:id)) %>;

const ctx = document.getElementById('myChart').getContext('2d');
const myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Victoire', 'Podium', 'Top10'],
        datasets: [{
            label: '# of Votes',
            data: <%= @data.to_json %>,




            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});
</script>