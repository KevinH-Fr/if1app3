<% if user_signed_in? %>
  <% if current_user.admin? %>

    <h1>Nouveau pilote</h1>
    <hr/> 
    <%= render "form", pilote: @pilote %>

    <hr/>

    <div>
      <%= link_to "Retour pilotes", pilotes_path, class:"btn btn-secondary" %>
    </div>

  <% else %>
    <br/> <strong>Vous n'avez pas les droits...</strong>
  <% end %>
<% end %>