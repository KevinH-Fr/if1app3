 <% if user_signed_in? %>
  <% if current_user.admin? %>

    <h1>Editer pilote</h1>

    <%= render "form", pilote: @pilote %>
    <br>

    <div>
      <%= link_to "", @pilote, class:"fa-solid fa-eye btn btn-primary" %> |
      <%= link_to "", pilotes_path, class:"fa-solid fa-arrow-rotate-left btn btn-secondary"  %>
