<% if user_signed_in? %>

<div> 
  <table class="table_icon_titre">
    <tr>
     <br>
      <th class="fa-solid fa-car fa-xl fs-1 table_icon_titre"> </th>
      <th class="table_icon_titre"> &nbsp;|&nbsp;Constructeurs </th>
    </tr>
  </table>
</div>

  <hr/>

 <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Nom</th>
          <th>Ecusson</th>
          <th>Logo</th>
          <th>Voiture</th>
          <th colspan="4">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @equipes.each do |equipe| %>
          <tr>
            <td> <%= link_to equipe.nom, equipe %> </td>
            <td>  <%= image_tag(equipe.logo, style: "width: 200px; display: block", class: "img-fluid rounded") if equipe.logo.attached? %>  </td> 
            <td>   <%= image_tag(equipe.ecusson, style: "width: 50px; display: block", class: "img-fluid rounded") if equipe.ecusson.attached? %>  </td> 
            <td>   <%= image_tag(equipe.voiture, style: "width: 100px; display: block", class: "img-fluid rounded") if equipe.voiture.attached? %>  </td> 

            <td width="5%">
              <%= link_to '', equipe, class:"fa-solid fa-eye btn btn-sm btn-primary" %> 
            </td>
            <td width="5%">
              <%= button_to '', equipe, class:"fa-solid fa-trash-can btn btn-sm btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
            </td>    
            <td width="5%">
              <%= link_to "", edit_equipe_path(equipe), class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary" %> 
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% if current_user.admin? %>
  <%= link_to "Nouvelle equipe", new_equipe_path, class:"btn btn-primary" %>
 <br> 
<% end %>

<% else %>

  <br/>   <strong>Vous n'avez pas les droits...</strong>
<% end %>
