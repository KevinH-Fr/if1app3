<% if user_signed_in? %>

<br/>

      <h1 class="fa-solid fa-car fa-2xl fw-bold fs-1"> - Equipes </h1> 
      
      <br/> <br/> <hr/> <br/>

 <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Nom</th>
          <th>Logo</th>
          <th>Voiture</th>
          <th colspan="4">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @equipes.each do |equipe| %>
          <tr>
            <td> <%= link_to equipe.nom, equipe %> </td>
            <td>  <%= image_tag(equipe.logo, style: "width: 200px; display: block", class: "img-fluid rounded") if equipe.logo.attached? %>  </td> 
            <td>   <%= image_tag(equipe.voiture, style: "width: 200px; display: block", class: "img-fluid rounded") if equipe.voiture.attached? %>  </td> 

            <td width="5%">
              <%= link_to '', equipe, class:"fa-solid fa-eye btn btn-primary" %> 
            </td>
            <td width="5%">
              <%= button_to '', equipe, class:"fa-solid fa-trash-can btn btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
            </td>    
            <td width="5%">
              <%= link_to "", edit_equipe_path(equipe), class:"fa-regular fa-pen-to-square btn btn-secondary" %> 
            </td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

<% if current_user.admin? %>
  <%= link_to "Nouvelle equipe", new_equipe_path, class:"btn btn-primary" %>
 <br> 
<% else %>

  <br/>   <strong>Vous n'avez pas les droits...</strong>
<% end %>
<% end %>