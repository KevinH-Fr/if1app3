 <% if user_signed_in? %>

  <p style="color: green"><%= notice %></p>

  <%= render @equipe %>

  <%= image_tag(@equipe.logo, style: "width: 400px; display: block", class: "img-fluid rounded") if @equipe.logo.attached? %>
  <%= image_tag(@equipe.voiture, style: "width: 400px; display: block", class: "img-fluid rounded") if @equipe.voiture.attached? %>

    
  <div>
  <br/>
    <%= link_to "", edit_equipe_path(@equipe), class:"fa-regular fa-pen-to-square btn btn-primary" %> |

     <% if current_user.admin? %>
        <%= link_to "", equipes_path, class:"fa-solid fa-arrow-rotate-left btn btn-secondary" %>
         <br/><hr/>
        <%= button_to "", @equipe, class:"fa-solid fa-trash-can btn btn-danger", method: :delete %>
      <% end %>
      </div>
<% else %>
  <br/>
  <strong>Vous n'avez pas les droits...</strong>
<% end %>