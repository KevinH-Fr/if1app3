 <% if user_signed_in? %>

    <p style="color: green"><%= notice %></p>

    <%= render @division %>

     <div>
        <%= link_to "", divisions_path, class:"fa-solid fa-arrow-rotate-left btn btn-secondary" %> 
        <% if current_user.admin? %>
                <%= link_to "", edit_division_path(@division), class:"fa-regular fa-pen-to-square btn btn-primary" %> |
                <br/> <hr/>
                <%= button_to "", @division, class:"fa-solid fa-trash-can btn btn-danger", method: :delete %>
        <% end %>
    </div>
<% else %>
  <br/>
  <strong>Vous n'avez pas les droits...</strong>
<% end %>