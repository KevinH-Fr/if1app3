
<body style="background-color: #313130;">

  <br>
  <h1 class="titre_doc"> Grille </h1>   <br><br>

<%= image_tag asset_url('/images/if1main.png'), style: "width: 140px;", class: "img-fluid rounded", id:"imgLogoIf1" %> 
<% divisionId = @divisionId %>

<h5 class="sous_titre_doc"> <%= Division.find(divisionId).nom %> </h5>

<hr class="hr_doc"> 

    <%#= tableau data cotes %>
    <table style="margin-left:auto;margin-right:auto">
      <thead class="table-dark">
        <tr>
          <th colspan="2" class="th_doc">pilote</th>
          
        </tr>
      </thead>

      <tbody>
        <tr>
          <% @pilotes.each do | pilote| %>
              <td>  
                  <div class="contenant">
                    <% idPilote = pilote.id %> 
                    <% idEcurie = Pilote.find(idPilote).ecurie %> 
                    <% nomPilote = Pilote.find(idPilote).nom %> 
                      <%= image_tag Equipe.find(idEcurie).logo, style: "width: 300px; display: block", class: "img-fluid rounded" %>
                            <div class="texte_centrer">
                              <%= nomPilote %>
                            </div>
                        </div>
                </td> 
                <td>
                   <%= image_tag Equipe.find(idEcurie).voiture, style: "width: 150px; display: block", class: "img-fluid rounded" %>
                </td>
           
        </tr>
        <% end %>
      </tbody>
    </table>

  <%# bas de page depuis partial %>
  <%= render "shared/baspdf" %>

</body>
