
<% if user_signed_in? %>

<div> 
  <table class="table_icon_titre">
    <tr>
     <br>
      <th class="fa-solid fa-layer-group fa-xl fs-1 table_icon_titre"> </th>
      <th class="table_icon_titre"> &nbsp;|&nbsp;Divisions </th>
    </tr>
  </table>
</div>

 <hr/> 

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Nom</th>
          <th>Numero</th>
          <th colspan="3">Actions</th>
      
        </tr>
      </thead>

      <tbody>
        <% @divisions.each do |division| %>
              <tr>
              
                <td> <%= link_to division.nom, division %> </td>
                <td>  <%= division.numero %> </td>
            
                  <td width="5%">
                      <%= link_to '', division, class:"fa-solid fa-eye btn btn-sm btn-primary" %> 
                  </td>
                  <td width="5%">
                    <%= button_to '', division, class:"fa-solid fa-trash-can btn btn-sm btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
                  </td> 
                  <td width="5%">
                      <%= link_to "", edit_division_path(division), class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary" %> 
                  </td> 

              </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% if current_user.admin? %>
  <%= link_to "Nouvelle division", new_division_path, class:"btn btn-primary" %>

<% end %>

<% else %>
  <br/>   <strong>Vous n'avez pas les droits...</strong>
<% end %>
