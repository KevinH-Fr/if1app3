
<% if user_signed_in? %>

  <br/>
  <h1 class="fa-solid fa-person-military-pointing fa-2xl fw-bold fs-1"> - Licences </h1>   
  <br/> <hr/> 

<%= render "shared/choixevent" %>


  <% if (@eventId).present? %>

    <%= render "shared/eventactif" %>

    <% eventId = @eventId %>
    <% divisionId = Event.find(eventId).division_id %>
    <% divisionNom = Division.find(divisionId).nom %>
    <% numGp = Event.find(eventId).numero %>
    <% circuitId = Event.find(eventId).circuit_id %>
    <% circuitPays = Circuit.find(circuitId).pays %>
    <%= link_to "Créer", toggle_creerlicences_licence_path(eventId), class:"btn btn-sm btn-warning", style:"margin: 2px", :onclick => "return confirm('Sûr ?')" %>
    <%= link_to "Supprimer", toggle_supprimerlicences_licence_path(eventId), class:"btn btn-sm btn-danger",style:"margin: 2px", :onclick => "return confirm('Sûr ?')" %>
  
    <%= link_to "Calculs recup", toggle_calculrecuplicences_licence_path(eventId), class:"btn btn-sm btn-success", style:"margin: 2px" %>
   
   <br> 

  <%# tab datas %>

  <hr>
  
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
        
          <th>Titulaires</th>
          <th>Ecurie</th>
          <th>perdus</th>
          <th>recupérés</th>
          <th colspan="4">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @licencesEvent.each do | licence| %>
          
            <td> <%= Pilote.find(licence.pilote_id).nom  %> </td>
            <td>                  
              <% idEcurie = Pilote.find(licence.pilote_id).ecurie %> 
                <% if Equipe.find(idEcurie).ecusson.present? %>
                  <%= image_tag Equipe.find(idEcurie).ecusson, style: "width: 100px; display: block", class: "img-fluid rounded" %>
                <% end %>
            </td>
            <td class="col_centree"> <%= licence.penalite %> </td>
            <td class="col_centree"> <%= licence.recupere %> </td>
    
            <%#= link_to "Calcul indiv", toggle_calculrecuplicencesIndiv_licence_path(licence.id), class:"btn btn-warning" %>
      
            <td>
              <%= link_to '', licence, class:"fa-solid fa-eye btn btn-sm btn-primary" %> 
            </td>
            <td>
              <%= button_to '', licence, class:"fa-solid fa-trash-can btn btn-sm btn-danger", method: :delete, :onclick => "return confirm('Sûr ?')" %>
            </td> 
            <td>
              <%= link_to "", edit_licence_path(licence), class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary" %> 
            </td> 
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>

  <hr>

    <% if current_user.admin? %>
      <%# lien vers synthese licences %>
      <% numGp = Event.find(@eventId).numero %>
      <%= link_to "Synthèse Licences", synthlicences_path(saisonId: @saisonId, divisionId: @divisionId, eventId: @eventId, numGp: numGp), class:"btn btn-success" %>
      <br><br>
    <% end %>

<% end %>

<% else %>

  <h3> Vous n'avez pas les droits...</h3>
  
<% end %>
