                <%= image_tag Equipe.find(idEcurie).logo, style: "width: 340px; display: block", class: "img-fluid rounded" %>
                      <div class="texte_centrer">
                        <%= nomPilote %>
                      </div>
                  </div>
          </td> 
           <td class="cols_pos_score">
              <strong> <%= res.score.to_i %> </strong> 
           </td>
           <td>
