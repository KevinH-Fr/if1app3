 <% if (@eventId).blank? %>
 <% else %>
  <% eventNum = Event.find(@eventId).numero %>
    
      <table style="margin-left:auto;margin-right:auto">
        <thead class="table-dark">
          <tr>
            <th class="cols_hide"></th>
            <th>#</th>
            <th>Pilote</th>
            <th>Points</th>
