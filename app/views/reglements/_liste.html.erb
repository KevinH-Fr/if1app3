
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
      <th>Numero</th>
      <th>Titre</th>
      <th>Description</th>
      <th>Pénalité licence</th>
      <th>Pénalité temps</th>
      <th colspan="3">Actions</th>
    </tr>
   </thead>
   <tbody>
    
       <% @reglements.each_with_index do | reglement | %>
        <tr>
         <td class="text-center"> <%= reglement.numero %>  </td>
         <td> <%= reglement.titre %>  </td>
         <td> <%= reglement.description %>  </td>
         <td class="text-center"> <%= reglement.penalite %>  </td>
         <td class="text-center"> <%= reglement.penalitetemps %>  </td>
         <%#= actions %>
         <td class="col_actions">
           <%= link_to '', reglement, class:"fa-solid fa-eye btn btn-sm btn-primary" %> 
         </td>
            <% if current_user.admin? %>
            <td class="col_actions">
                <%= link_to "", edit_reglement_path(reglement, eventId: @eventId), class:"fa-regular fa-pen-to-square btn btn-sm btn-warning" %> 
            </td> 
            <td class="col_actions">
                <%= button_to '', reglement, class:"fa-solid fa-trash-can btn btn-sm btn-danger", method: :delete, :onclick => "return confirm('Sûr ?')" %>
            </td> 
            <% end %>
         </tr>
       <% end %> 
     
   </tbody>  
  </table>
</div>