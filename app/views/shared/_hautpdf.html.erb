
<%# entete haut des pdf resultats, classements %>

<%= image_tag asset_url('/images/if1main.png'), style: "width: 140px;", class: "img-fluid rounded", id:"imgLogoIf1" %> 

<% eventId = @eventId %>
<%# Event.find(eventId).date %>
<% circuitId = Event.find(eventId).circuit_id %> 

  <% if Circuit.find(circuitId).drapeau.present? %>
    <%= image_tag(Circuit.find(circuitId).drapeau, style: "width: 100px; display: block", class: "img-fluid rounded", id:"imgDrapeau") %> 
  <% end %>

 <table width="500" style="margin-left:auto;margin-right:auto">
    <thead>
      <tr>
        <th class="th_doc">GP</th>
        <th class="th_doc">Date</th>
        <th class="th_doc">Pays</th>
        <th class="th_doc">Division</th>
        <th class="th_doc">Saison</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td class="val_entete">
            <%= Event.find(eventId).numero %>
        </td>
        <td class="val_entete">
          <% if Event.find(@eventId).date.present? %>
              <% datetime = Event.find(@eventId).date.to_date %>
              <%= datetime.strftime("%d/%m/%y") %>
          <% end %>
        </td>
        <td class="val_entete">
          <% circuitId = Event.find(eventId).circuit_id %> 
          <%= Circuit.find(circuitId).pays %>
        </td>
         <td class="val_entete">
          <% divisionId = Event.find(eventId).division_id %> 
          <%= Division.find(divisionId).nom %>
        </td>
         <td class="val_entete">
          <% saisonId = Event.find(eventId).saison_id %> 
          <%= Saison.find(saisonId).nom %>
        </td>
      
      </tr>
  </tbody>
</table>

<hr class="hr_doc"> 