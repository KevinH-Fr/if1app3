 <% if user_signed_in? %>

    <p style="color: green"><%= notice %></p>

    <%= render @event %>

    <div>
      <%= link_to "", events_path, class:"fa-solid fa-arrow-rotate-left btn btn-secondary" %>
    <br/><hr/>
      <% if current_user.admin? %>
        <%= link_to "", edit_event_path(@event), class:"fa-regular fa-pen-to-square btn btn-primary" %> |
        <%= button_to "", @event, class:"fa-solid fa-trash-can btn btn-danger", method: :delete %>
      <% end %>
    </div>
<% else %>
  <br/>
  <strong>Vous n'avez pas les droits...</strong>
<% end %>