 <% if user_signed_in? %>
  <% if current_user.admin? %>

    <h1>Editer user</h1>

    <%= render "form", resultat: @user %>
    <br>

    <div>
      <%= link_to "", @user, class:"fa-solid fa-eye btn btn-primary" %> |
      <%= link_to "", users_path, class:"fa-solid fa-arrow-rotate-left btn btn-secondary"  %>
    </div>

    <%= link_to "Passer Admin", edit_user_path(@user), method: :call_action, class:"btn btn-dark" %>

    <% else %>
    <br/>   <strong>Vous n'avez pas les droits...</strong>
  <% end %>
<% end %>